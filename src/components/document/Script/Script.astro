---
interface Props {
  src: string;     // External JavaScript file URL
  defer?: boolean; // Whether to defer script loading
  async?: boolean; // Whether to load script asynchronously
  type?: string;   // Script type (default: "module")
}

const { 
  src,
  defer = false,
  async = false,
  type = "module"
} = Astro.props;
---

<script 
  is:inline
  src={src}
  type={type}
  defer={defer}
  async={async}
/>
