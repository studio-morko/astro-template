---
import { Metadata } from "@lib/metadata/metadata"
import Title        from "./Title/Title.astro"
import Description  from "./Description/Description.astro"
import Keywords     from "./Keywords/Keywords.astro"
import Index        from "./Index/Index.astro"
import Follow       from "./Follow/Follow.astro"
import Canonical    from "./Canonical/Canonical.astro"
import OpenGraph    from "./OpenGraph/OpenGraph.astro"
import Twitter      from "./Twitter/Twitter.astro"
import Favicon      from "./Favicon/Favicon.astro"

const metadata = {
  index       : Metadata.index,
  follow      : Metadata.follow,
  title       : Metadata.title,
  description : Metadata.description,
  keywords    : Metadata.keywords,
  image       : Metadata.image,
  type        : Metadata.type,
}

const canonical = new URL(Astro.url.pathname, Astro.site).toString();

---

<head>
  <meta charset = "utf-8" />
  <meta name    = "viewport" content  = "width=device-width" />
  <meta name    = "generator" content = {Astro.generator} />
  
  <Title       value = {metadata.title} />
  <Description value = {metadata.description} />
  <Keywords    value = {metadata.keywords} />

  <OpenGraph
    title       = {metadata.title}
    description = {metadata.description}
    image       = {metadata.image}
    url         = {canonical}
    type        = {metadata.type}
  />
  
  <Twitter
    title       = {metadata.title}
    description = {metadata.description}
    image       = {metadata.image}
  />

  <Index     value = {metadata.index} />
  <Follow    value = {metadata.follow} />
  <Canonical value = {canonical} />

  <Favicon 
    icons = {{
      default: {
        ico : { path: "/favicon/favicon.ico" },
        png : [
          { path: "/favicon/favicon-16.png", size: 16 },
          { path: "/favicon/favicon-32.png", size: 32 },
          { path: "/favicon/favicon-192.png", size: 192 },
          { path: "/favicon/favicon-512.png", size: 512 }
        ],
        apple : { path: "/favicon/apple-touch-icon.png", size: 180 }
      }
    }}
  />

  <slot />
</head>

