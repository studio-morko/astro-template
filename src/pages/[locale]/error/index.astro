---
import Layout         from "@layouts/Layout.astro";
import { HTTPError }  from '@library/error/error';
import { Locale }     from '@library/locale/locale';
import { Metadata }   from '@library/metadata/metadata';
export const prerender = false;

const locale      = Locale.current;
const status      = HTTPError.status;
const title       = HTTPError.title;
const description = HTTPError.description;

Metadata.set({
  absolute: true,
  template: '%s',
  title: `${status} | ${title}`,
  description: description,
  index: false,
  follow: false,
});

---

<Layout>
  <section class="error">
    <div class="content">
      <data class = "status" value = {status}>{status}</data>
      <div class = "message">
        <h1>{title}</h1>
        <p>{description}</p>
      </div>
      <div class="action">
        <a href={`/${locale}`}>Back to Home</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Your error page styles */
</style>