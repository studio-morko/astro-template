---
import Root         from '@layouts/Root.astro';
import Layout       from '@layouts/Layout.astro';

import { Locale }   from '@lib/locale';
import { Metadata } from '@lib/metadata';

export function getStaticPaths() {
  return Locale.supported.map(locale => ({
    params: { locale }
  }));
}

---

<Root metadata={{
  title       : Locale.t('page.home.title'),
  description : Locale.t('page.home.description'),
  keywords    : Locale.t('page.home.keywords').split(','),
}}/>
  <Layout align="center">
    <section data-section="hero">
      <h1>{Locale.t('page.home.title')}</h1>
      <p>{Locale.t('page.home.description')}</p>
    </section>
  </Layout>
</Root>

<style>
  :global(main) {
    padding-bottom : 15dvh;
  }

  section[data-section="hero"] {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-400);
    max-width: 62rem;

    h1 {
      font-size: var(--fs-800);
      font-weight: var(--fw-700);
      line-height: var(--lh-normal);
      text-align: center;
      margin: 0;
    }

    p {
      font-size: var(--fs-500);
      font-weight: var(--fw-400);
      line-height: var(--lh-normal);
      text-align: center;
      color: var(--color-zinc-700);
    }

  }
</style>
