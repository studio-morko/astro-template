{
  "extends" : "astro/tsconfigs/strict",
  "include" : [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.astro"
  ],
  "compilerOptions": {
    "baseUrl" : ".",
    "types"   : ["astro/client"],
    "paths"   : {
      "@root/*"        : ["./*"],
      "@src/*"         : ["src/*"],
      "@components/*"  : ["src/components/*" ],
      "@ui/*"          : ["src/components/ui/*" ],
      "@document/*"    : ["src/components/document/*" ],
      "@layouts/*"     : ["src/layouts/*" ],
      "@locales/*"     : ["src/assets/translations/*" ],
      "@pages/*"       : ["src/pages/*" ],
      "@assets/*"      : ["src/assets/*" ],
      "@images/*"      : ["src/assets/images/*" ],
      "@styles/*"      : ["src/assets/styles/*" ],
      "@utils/*"       : ["src/utils/*" ],
      "@lib/*"         : ["src/utils/lib/*" ],
      "@services/*"    : ["src/utils/services/*" ],
      "@collections/*" : ["src/utils/services/directus/collections/*" ],
    },
  }
}

